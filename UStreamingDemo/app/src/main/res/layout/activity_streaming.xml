<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <android.opengl.GLSurfaceView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/small_video_view_container"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:background="@android:color/darker_gray" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/start_streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_streaming" />

            <Button
                android:id="@+id/stop_streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_streaming" />

            <Button
                android:id="@+id/start_rtc_live_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCLickStartRtcStreaming"
                android:text="@string/start_rtc_streaming"
                android:visibility="gone" />

            <Button
                android:id="@+id/stop_rtc_live_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickStopRtcStreaming"
                android:text="@string/stop_rtc_streaming"
                android:visibility="gone" />

            <Button
                android:id="@+id/switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_camera" />

            <Button
                android:id="@+id/switch_picture_streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture_streaming" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <include
            layout="@layout/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false">

        <com.movieous.streaming.demo.view.FocusIndicator
            android:id="@+id/focus_indicator"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </FrameLayout>

</RelativeLayout>
